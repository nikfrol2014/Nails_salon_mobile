<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Выбранный элемент -->
    <item android:state_checked="true" android:color="@color/black">
        <color android:color="@color/black" />
    </item>

    <!-- Невыбранный элемент -->
    <item android:state_checked="false" android:color="@color/text_secondary">
        <color android:color="@color/text_secondary" />
    </item>

    <!-- По умолчанию -->
    <item android:color="@color/text_secondary">
        <color android:color="@color/text_secondary" />
    </item>

</selector>